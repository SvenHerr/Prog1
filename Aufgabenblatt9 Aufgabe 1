
public class Blatt9Aufgabe1A 
{
  
	public static void main(String[] args) 
	{
                                                // Aufruf der Methoden sollte man vllt anderst lösen!
		int anfang[] = new int[6];
		
		for(int i = 0; i < anfang.length; i++) 
		{
			anfang[i] = ZieheZahl();
			
		}

		int result[] = Sortiere(anfang);
		for(int l = 0; l <result.length; l++) 
		{
			System.out.print(result[l]+ " ");
		}
	}
	
	public static int[] Sortiere(int ungepruefteLottozahlen[]) 
	{
		int temp;
		int [] gepruefteLottozahlen= PruefeArray(ungepruefteLottozahlen);
		
		for(int k = 0; k < gepruefteLottozahlen.length; k++) 
		{
			for(int i = 0; i<gepruefteLottozahlen.length-1; i++) 
			{
				if(gepruefteLottozahlen[i] > gepruefteLottozahlen[i+1]) 
				{
					temp = gepruefteLottozahlen[i+1];
					gepruefteLottozahlen[i+1] = gepruefteLottozahlen[i];
					gepruefteLottozahlen[i] = temp;
				}
			}
		}
		int sortierteLottozahlen[] = gepruefteLottozahlen; // ist nicht nötig nochmal ein Array zu erstellen. Ist nur zum besseren Verständniss
		
		return sortierteLottozahlen;
	}
	
	public static int [] PruefeArray(int ungepruefteLottozahlen[]) 
	{
		int i;
		for(int k = 0; k <ungepruefteLottozahlen.length; k++) 
		{
			int temp = ungepruefteLottozahlen[k];
			
			for(i=k; i<ungepruefteLottozahlen.length-1; i++) 
			{
				if(temp == ungepruefteLottozahlen[i+1]) 
				{
					ungepruefteLottozahlen[i+1] = ZieheZahl();
				}
			}
			ungepruefteLottozahlen[k] = temp;
		}
		
		int gepruefteLottozahlen[] = ungepruefteLottozahlen; // ist nicht nötig nochmal ein Array zu erstellen. Ist nur zum besseren Verständniss
		
		return gepruefteLottozahlen;
	}
	
	public static int ZieheZahl() 
	{
		int zahl = 0;
		do 
		{
			double temp = Math.random()*1000/10;
			zahl = (int)temp;
			
		}while(zahl >49 || zahl == 0);
			
		return zahl;	
	}
}
